									"});",
									"pm.test(\"Ответ содержит значение Роли, равное значению Роли в запросе\", function () {",
									"    var jsonData = pm.response.json();",
									"    const requestValue = pm.collectionVariables.get(\"roleValue\");",
									"    pm.expect(jsonData.value).to.eql(requestValue);",
									"",
									"});"
								],
								"type": "text/javascript"
							}
						},
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"pm.collectionVariables.set(\"roleValue\", \"test1\");"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
